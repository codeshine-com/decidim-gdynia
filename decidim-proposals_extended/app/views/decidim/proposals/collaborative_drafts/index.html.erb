<% add_decidim_page_title(Decidim::Proposals::CollaborativeDraft.model_name.human(count: 2)) %>

<%= render partial: "decidim/shared/component_announcement" %>

<div class="row columns">
  <div class="mb-s">
    <%= link_to proposals_path(filter_link_params), class: "small hollow" do %>
      <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %>
      <%= t(".back_to_list") %>
    <% end %>
  </div>
  <div class="title-action">

    <h2 id="drafts-count" class="title-action__title section-heading">
      <%= render partial: "count" %>
    </h2>
    <%= render "new_collaborative_draft_button" %>
  </div>
</div>
<div class="row">
  <div class="columns mediumlarge-4 large-3">
    <%= render partial: "filters_small_view" %>
    <div class="card card--secondary show-for-mediumlarge">
      <%= render partial: "filters" %>
    </div>
  </div>
  <div id="collaborative_drafts" class="columns mediumlarge-8 large-9" aria-live="polite">
    <%= render partial: "collaborative_drafts" %>
  </div>
</div>
